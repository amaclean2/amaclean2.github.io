@import url('https://fonts.googleapis.com/css?family=Roboto:300,400')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Roboto', monospace

.header
  height 100vh
  width 100vw
  background-color #000
  position relative
  // background-image url('/images/DSCF0969.JPG')
  background-size cover
  
  .desc
    color #FFF
    font-size 50px
    font-weight lighter
    padding 10px
    padding-top 30%
    
  .more-desc
    color #FFF
    font-weight lighter
    font-size 20px
    padding 15px 30px
    position absolute
    right 0px
    bottom 115px
    
    a
      color #EEE

  .page-title
    font-weight lighter
    font-size 80px
    text-transform uppercase
    color #000
    background-color #EEE
    position absolute
    bottom 30px
    right 0px
    width 100%
    text-align right
    padding-right 30px
    box-shadow 0 -10px 30px rgba(0,0,0,0.5)
    z-index 1
  
    @media screen and (max-width 680px)
      font-size 30px
    

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px